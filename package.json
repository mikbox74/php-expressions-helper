{
	"name": "php-expressions-helper",
	"displayName": "PHP expressions helper",
	"description": "Helps you to write some expressions faster. Inspired by \"Netbeans PHP Enhancements plugin\"",
	"version": "0.2.1",
	"icon" : "elephant-6-128.png",
	"publisher": "MihailUrakov",
	"repository": "https://github.com/mikbox74/php-expressions-helper",
	"engines": {
		"vscode": "^1.42.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"php", "enhancements", "arrows", "expressions"
	],
	"activationEvents": [
		"onLanguage:php"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
			  "id": "php",
			  "extensions": [".php"]
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.42.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"glob": "^7.1.6",
		"mocha": "^10.2.0",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	}
}
